<% provide(:title, "Sign in") %>
<h1><%= t(:sign_in) %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label t(:email) %>
      <%= f.text_field :email %>

      <%= f.label t(:password) %>
      <%= f.password_field :password %>

      <%= f.submit t(:sign_in), class: "btn btn-large btn-primary" %>
    <% end %>

    <p><%= t(:forgot_password)%>? <%= link_to t(:sign_up_now), signup_path %></p>
  </div>
</div>